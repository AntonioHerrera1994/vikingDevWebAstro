  { url: "https://larectacoworking.com/", img: myImageP20, agencia: "VikingDev" },
  { url: "https://perioclinic.com.mx/", img: myImageP21, agencia: "Snitch Agency" },
  { url: "https://tjplasticsurgeryofficial.com/", img: myImageP23, agencia: "Snitch Agency" },
  { url: "https://los12reinoszodiacales.com/", img: myImageP24, agencia: "VikingDev" },
  { url: "https://lachicafinanzas.com.mx/", img: myImageP25, agencia: "Snitch Agency" },
   { url: "https://perezgrovas.com/", img: myImageP26, agencia: "VikingDev" },
  { url: "https://rihabvetcare.com/", img: myImageP27, agencia: "VikingDev" },
  { url: "https://holisticancercoach.com/", img: myImageP22, agencia: "VikingDev" },
   { url: "https://alliance-medtech.com/", img: myImageP28, agencia: "Snitch Agency" },
   { url: "https://altive.realty/", img: MyImage29, agencia: "VikingDev" },
];
// Calcular contador por agencia
const contadorAgencias = proyectos.reduce((acc, p) => {
  acc[p.agencia] = (acc[p.agencia] || 0) + 1;
  return acc;
}, {});

---

<section class="portafolio" id="proyectos">
  <div class="cuadros-cont">
    <div class="main-title-port">
      <h4>Portafolio</h4>
      <h1>Proyectos que Han Transformado Negocios</h1>
    </div>
  <!-- Filtros con contador -->
    <div class="filtros">
      <button data-agencia="VikingDev" class="filtro activo">
        VikingDev <span class="contador">({contadorAgencias['VikingDev']})</span>
      </button>
      <button data-agencia="Snitch Agency" class="filtro">
        Snitch Agency <span class="contador">({contadorAgencias['Snitch Agency']})</span>
      </button>
    </div>

    <!-- Galería -->
    <div class="galeria">
      {proyectos.map((p) => (
        <a href={p.url} target="_blank" class="proyecto" data-agencia={p.agencia}>
          <img src={p.img.src} alt="proyecto web" class="port-img" />
        </a>
      ))}
    </div>

    <!-- Paginación -->
    <div class="paginacion">
      <button id="anterior" disabled>Anterior</button>
      <button id="siguiente">Siguiente</button>
    </div>
  </div>
</section>


  <script>
      import "../scripts/drag.js"
  </script>
