<html>
<head>
  <style>
    .cursor-dot {
      width: 10px; 
      height: 10px;
      background-color: blue; 
      border-radius: 50%;
      position: fixed; 
      pointer-events: none; 
      z-index: 9999; 
      transition: transform 0.2s ease; 
    }
  </style>
</head>
<body>
  <div class="cursor-dot"></div>

  <script>
    const cursorDot = document.querySelector('.cursor-dot');

    document.addEventListener('mousemove', (e) => {
      cursorDot.setAttribute('style', `transform: translate(${e.clientX - 5}px, ${e.clientY - 5}px)`); 
    });
  </script>
</body>
</html>
